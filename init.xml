---
apiVersion: v1
kind: ImageStream
metadata:
  name: sonarqube-scanner
---
apiVersion: v1
kind: BuildConfig
metadata:
  name: sonarqube-scanner
  labels:
    application: jenkins
spec:
  source:
    type: Git
    git:
      uri: git@github.com:iktech/sonarqube-scanner.git
    sourceSecret:
      name: "github-secret"
  strategy:
    type: Docker
    dockerStrategy:
  output:
    to:
      kind: ImageStreamTag
      name: sonarqube-scanner:latest
  triggers:
    - type: ConfigChange
    - type: ImageChange
    - type: GitHub
      github:
        secret: "github-secret"

